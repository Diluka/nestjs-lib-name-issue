{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/demo/(.*)": "<rootDir>/../libs/demo/src/$1",
    "@app/demo": "<rootDir>/../libs/demo/src",
    "@app/demo2/(.*)": "<rootDir>/../libs/demo2/src/$1",
    "@app/demo2": "<rootDir>/../libs/demo2/src"
  }
}